[Unit]
Description=Thermo_bt_exporter service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/sensors/thermo_bt/
ExecStart=python3 /root/sensors/thermo_bt/thermo_bt_exporter.py --bind=0.0.0.0 --port=8002 --file /tmp/bleu.json /tmp/jaune.json /tmp/violet.json --location chambre_sohann bureau_kevin salon
ExecReload=/bin/kill -HUP $MAINPID

Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
