[Unit]
Description=Enviroplus-exporter service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/sensors/enviroplus_exporter/
ExecStart=python3 /root/sensors/enviroplus_exporter/enviroplus_exporter.py --bind=0.0.0.0 --port=8000 --factor=1
ExecReload=/bin/kill -HUP $MAINPID

Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
